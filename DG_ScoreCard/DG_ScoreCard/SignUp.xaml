                <Label x:Name="state2_l" Content="State" HorizontalAlignment="Left" Margin="10,0,0,200.567" Width="70" Grid.Column="2" Height="30" VerticalAlignment="Bottom" d:LayoutOverrides="LeftMargin, RightMargin"/>
                <TextBox x:Name="state2_tb" Margin="10,0,10,167.012" TextWrapping="Wrap" Grid.Column="2" FontSize="18.667" Height="31" VerticalAlignment="Bottom" d:LayoutOverrides="VerticalAlignment"/>
            </Grid>
            <Button x:Name="submit2_btn" Content="Submit" HorizontalAlignment="Right" Height="21" Margin="0,0,22.5,4" VerticalAlignment="Bottom" Width="57" Background="White" Click="submit2_btn_Click"/>
        </Grid>
        <Rectangle x:Name="movebar2_r" Height="18.667" Stroke="#FF5CC8E0" VerticalAlignment="Top" MouseDown="movebar_r_MouseDown" Cursor="SizeAll" Fill="#FF5CC8E0" Margin="10,10,66.667,0"/>
        <ed:BlockArrow x:Name="backarrow2_BA" HorizontalAlignment="Left" Height="18" Margin="23,0,0,16" Orientation="Right" VerticalAlignment="Bottom" Width="39" RenderTransformOrigin="0.5,0.5" MouseLeftButtonDown="backarrow2_BA_MouseLeftButtonDown" Style="{DynamicResource backarrow_BA}">
            <ed:BlockArrow.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </ed:BlockArrow.RenderTransform>
        </ed:BlockArrow>
        <Button x:Name="exit2_btn" Content="Button" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="30" RenderTransformOrigin="0.967,0.283" Margin="752,10,0,0" Click="exit2_btn_Click">
            <Button.ContentTemplate>
                <DataTemplate>
                    <Grid/>
                </DataTemplate>
            </Button.ContentTemplate>
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
                    <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Grid Background="{x:Null}">
                                    <Rectangle x:Name="rectangle" Fill="#FFAA1212" RadiusY="5" RadiusX="5" Stroke="White"/>
                                    <Rectangle Fill="White" Margin="2.875,2.75,2.75,0" RadiusY="5" RadiusX="5" Stroke="White" StrokeThickness="0" Opacity="0.2" Height="11.25" VerticalAlignment="Top"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsDefaulted" Value="true"/>
                                    <Trigger Property="IsMouseOver" Value="true"/>
                                    <Trigger Property="IsPressed" Value="true"/>
                                    <Trigger Property="IsEnabled" Value="false"/>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Fill" TargetName="rectangle" Value="#FFE82222"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
